@page
@model Dissertation.Pages.Policies.Manage.UpdateModel

@{
    ViewData["Title"] = "Update Policy";
}

<h1>Update Policy</h1>

<hr />

<form method="post" enctype="multipart/form-data">
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Policy.Title" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Policy.Title" class="form-control" />
            <span asp-validation-for="Policy.Title" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Policy.Link" class="control-label">Policy</label>
        </dt>
        <dd class="col-sm-10">
            <input type="file" id="file1" name="file1" multiple="multiple" class="form-control" />
            <input asp-for="Policy.Link" class="form-control" hidden />
            <span asp-validation-for="Policy.Link" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Policy.UploadedBy" class="control-label">Last Updated By</label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Policy.UploadedBy" class="form-control" disabled />
            <input asp-for="Policy.UploadedBy" class="form-control" hidden />
            <span asp-validation-for="Policy.UploadedBy" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Policy.DateUpdated" class="control-label">Last Updated</label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Policy.DateUpdated" class="form-control" disabled />
            <input asp-for="Policy.DateUpdated" class="form-control" hidden />
            <span asp-validation-for="Policy.UploadedBy" class="text-danger"></span>
        </dd>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Policy.Id" />
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-page="./Index" class="btn btn-danger">Back to List</a>
        </dd>
    </dl>
</form>
        
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
