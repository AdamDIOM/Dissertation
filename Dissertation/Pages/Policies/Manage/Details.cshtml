@page
@model Dissertation.Pages.Policies.Manage.DetailsModel

@{
    ViewData["Title"] = "Policy Details";
}

<h1>Policy Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Policy.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Policy.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Policy.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Policy.Link)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Policy.DateUpdated)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Policy.DateUpdated != null)
            {
                <p>@(((Model.Policy.DateUpdated ?? DateTime.Now) + TimeZoneInfo.Local.GetUtcOffset(DateTime.UtcNow)).ToString("HH:mm, dd/MMM/yyyy"))</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Policy.UploadedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Policy.UploadedBy)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Update" asp-route-id="@Model.Policy.Id">Update</a>
    <a asp-page="./Index" class="btn">Back to List</a>
</div>
