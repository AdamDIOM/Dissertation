@page
@model Dissertation.Pages.News.Manage.DetailsModel

@{
    ViewData["Title"] = $"Details – {Model.Article.Title}";
}

<h1>@Model.Article.Title - Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.AuthorId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Content)
        </dt>
        <dd class="col-sm-10">
            <md-block>@Html.DisplayFor(model => model.Article.Content)</md-block>
        </dd>
        <dt class="col-sm-2">
            Publish Date and Time (Your local time)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Article.PublishDate != null)
            {
                if (Model.Article.PublishDate < DateTime.UtcNow)
                {
                    <p>@(((Model.Article.PublishDate ?? DateTime.Now) + TimeZoneInfo.Local.GetUtcOffset(DateTime.UtcNow)).ToString("HH:mm, dd/MM/yyyy"))</p>
                }
                else
                {
                    <p class="text-danger">@(((Model.Article.PublishDate ?? DateTime.Now) + TimeZoneInfo.Local.GetUtcOffset(DateTime.UtcNow)).ToString("HH:mm, dd/MM/yyyy"))</p>
                }
            }
            else
            {
                <p class="text-danger">Draft</p>
            }
        </dd>
        <dt class="col-sm-2">
            Displayed on Homepage?
        </dt>
        <dd class="col-sm-10">
            @if(Model.Article.HomepageDisplay ?? false)
            {
                <input type="checkbox" checked />
            }
            else
            {
                <input type="checkbox" />
            }
        </dd>
        <dt class="col-sm-2">
            Banner Image
        </dt>
        <dd class="col-sm-10">
            <img class="w-25" src="@($" https://dissertationad.blob.core.windows.net/news-banner-images/{Model.Article.Id}.png")" alt="@Model.Article.Title" onerror="if (this.src != '/img/logo-169.png') this.src = '/img/logo-169.png';" />
        </dd>
        <dt class="col-sm-2">
            Tags
        </dt>
        <dd class="col-sm-10">
            <ul class="ps-0">
                @foreach(var t in Model.Tags)
                {
                    <li class="btn tag-show">@t.Tag</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article.Id" class="btn">Edit</a>
    <a asp-page="./Index" class="btn">Return</a>
</div>
