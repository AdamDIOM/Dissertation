@page
@model Dissertation.Pages.News.Manage.DeleteModel

@{
    ViewData["Title"] = $"Delete – {Model.Article.Title}";
}

<h1>Delete - @Model.Article.Title</h1>

<h3>Are you sure you want to delete this article?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.AuthorId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Content)
        </dt>
        <dd class="col-sm-10">
            <md-block>@Html.DisplayFor(model => model.Article.Content)</md-block>
        </dd>
        <dt class="col-sm-2">
            Publish Date and Time
        </dt>
        <dd class="col-sm-10">
            @((Model.Article.PublishDate ?? DateTime.Now).ToString("HH:mm, dd/MM/yyyy"))
        </dd>
        <dt class="col-sm-2">
            Displayed on Homepage?
        </dt>
        <dd class="col-sm-10">
            @if (Model.Article.HomepageDisplay ?? false)
            {
                <input type="checkbox" checked />
            }
            else
            {
                <input type="checkbox" />
            }
        </dd>
        <dt class="col-sm-2">
            Banner Image
        </dt>
        <dd class="col-sm-10">
            <img class="banner-image" src="@($" https://dissertationad.blob.core.windows.net/news-banner-images/{Model.Article.Id}.png")" alt="@Model.Article.Title" onerror="if (this.src != '/img/logo-169.png') {this.src = '/img/logo-169.png'; this.className = 'w-25';}" />
        </dd>
        <dt class="col-sm-2">
            Tags
        </dt>
        <dd class="col-sm-10">
            <ul class="ps-0">
                @foreach (var t in Model.Tags)
                {
                    <li class="btn tag-show">@t.Tag</li>
                }
            </ul>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Article.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn">Return</a>
    </form>
</div>
