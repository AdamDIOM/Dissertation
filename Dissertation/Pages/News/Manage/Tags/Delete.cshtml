@page
@model Dissertation.Pages.News.Manage.Tags.DeleteModel

@{
    ViewData["Title"] = $"Delete News Tag – {Model.ArticleTag.Tag}";
}

<h1>Delete Tag</h1>

<h3>Are you sure you want to delete @Model.ArticleTag.Tag?</h3>
<h4>This will irrevocably delete all associations within Articles.</h4>
<div>
    <hr />
    
    <form method="post">
        <input type="hidden" asp-for="ArticleTag.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn">Back to List</a>
    </form>
</div>
