@page
@model Dissertation.Pages.News.PostModel

@{
    ViewData["Title"] = $"{Model.Article.Title} | News";
}

<h1>@Model.Article.Title</h1>
<img class="banner-image" src="@($" https://dissertationad.blob.core.windows.net/news-banner-images/{Model.Article.Id}.png")" alt="@Model.Article.Title" onerror="this.className = 'd-none';" />
<div>
    <h4>@Model.Article.AuthorId | @Model.Article.PublishDate</h4>
    <ul class="ps-0">
        @foreach(var t in Model.Tags)
        {
                <a asp-page="./Index" asp-route-filter="@t.Id"><li class="btn">@t.Tag</li></a>
        }
    </ul>
    <hr />
    <dl class="row">
        <md-block class="mx-4">
            @Model.Article.Content
        </md-block>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
