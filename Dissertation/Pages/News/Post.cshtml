@page
@model Dissertation.Pages.News.PostModel

@{
    ViewData["Title"] = "Post";
}

<h1>@Model.Article.Title</h1>
@if (Model.Article.BannerImage != null)
{
    try
    {
        <img class="banner-image" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.Article.BannerImage))" alt="@Model.Article.Title" />
    }
    catch
    { }
}
<div>
    <h4>@Model.Article.AuthorId | @Model.Article.PublishDate</h4>
    <ul class="ps-0">
        @foreach(var t in Model.Tags)
        {
                <a asp-page="./Index" asp-route-filter="@t.Id"><li class="btn">@t.Tag</li></a>
        }
    </ul>
    <hr />
    <dl class="row">
        <md-block class="mx-4">
            @Model.Article.Content
        </md-block>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
