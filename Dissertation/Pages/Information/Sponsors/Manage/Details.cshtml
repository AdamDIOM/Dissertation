@page
@model Dissertation.Pages.Information.Sponsors.Manage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sponsor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sponsor.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sponsor.Name)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (Model.Sponsor.ImageData != null)
            {
                try
                {
                    <img class="sponsor-image" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.Sponsor.ImageData))" alt="@Model.Sponsor.Name" />
                }
                catch (Exception e)
                {
                    <span>Image not found</span>
                }
            }
            else
            {
                <span>Image not found</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sponsor.Information)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sponsor.Information)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Sponsor.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
