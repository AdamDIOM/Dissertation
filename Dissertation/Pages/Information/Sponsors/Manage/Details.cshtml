@page
@model Dissertation.Pages.Information.Sponsors.Manage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sponsor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sponsor.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sponsor.Name)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img class="sponsor-image" src="@($" https://dissertationad.blob.core.windows.net/sponsor-images/{Model.Sponsor.Id}.png")" alt="@Model.Sponsor.Name" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sponsor.Information)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sponsor.Information)
