@page
@model Dissertation.Pages.Information.Sponsors.Manage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Sponsor - @Model.Sponsor.Name</h1>

<h3>Are you sure you want to delete this sponsor?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sponsor.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sponsor.Name)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img class="sponsor-image" src="@($" https://dissertationad.blob.core.windows.net/sponsor-images/{Model.Sponsor.Id}.png")" alt="@Model.Sponsor.Name" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sponsor.Information)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sponsor.Information)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Sponsor.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn">Back to List</a>
    </form>
</div>
