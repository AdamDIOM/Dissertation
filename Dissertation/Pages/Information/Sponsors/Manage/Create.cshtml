@page
@model Dissertation.Pages.Information.Sponsors.Manage.CreateModel

@{
    ViewData["Title"] = "Create Sponsor";
}

<h1>Create Sponsor</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Sponsor.Name" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Sponsor.Name" class="form-control" />
            <span asp-validation-for="Sponsor.Name" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Image</label>
        </dt>
        <dd class="col-sm-10">
            <input type="file" id="file1" name="file1" multiple="multiple" class="form-control" />
            <span asp-validation-for="Sponsor.Name" class="text-danger">@Model.noImgMsg</span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Sponsor.Information" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <textarea asp-for="Sponsor.Information" class="form-control"></textarea>
            <span asp-validation-for="Sponsor.Information" class="text-danger"></span>
        </dd>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-page="Index" class="btn btn-danger">Back to List</a>
        </div>
    </dl>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
