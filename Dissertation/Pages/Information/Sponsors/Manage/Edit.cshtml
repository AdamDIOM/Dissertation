@page
@model Dissertation.Pages.Information.Sponsors.Manage.EditModel

@{
    ViewData["Title"] = $"Edit Sponsor - {Model.Sponsor.Name}";
}

<h1>Edit Sponsor - @Model.Sponsor.Name</h1>
<hr />

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Sponsor.Id" />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Sponsor.Name" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Sponsor.Name" class="form-control" />
            <span asp-validation-for="Sponsor.Name" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Image</label>
        </dt>
        <dd class="col-sm-10">
            <img class="sponsor-image my-1" src="@($" https://dissertationad.blob.core.windows.net/sponsor-images/{Model.Sponsor.Id}.png")" alt="@Model.Sponsor.Name" />
            <input type="file" id="file1" name="file1" multiple="multiple" class="form-control" />
            <span asp-validation-for="Sponsor.Name" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Sponsor.Information" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <textarea asp-for="Sponsor.Information" class="form-control"></textarea>
            <span asp-validation-for="Sponsor.Information" class="text-danger"></span>
        </dd>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group mt-2">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-page="./Index" class="btn btn-danger">Back to List</a>
        </div>
    </dl>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
