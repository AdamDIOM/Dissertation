@page
@model Dissertation.Pages.Information.FAQs.Manage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>FAQ Manager</h1>

<p>
    <a asp-page="Create">Create New FAQ</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FAQ[0].Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FAQ[0].Answer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FAQ) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                    <md-block>@Html.DisplayFor(modelItem => item.Answer)</md-block>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
