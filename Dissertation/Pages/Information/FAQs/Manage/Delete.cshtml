@page
@model Dissertation.Pages.Information.FAQs.Manage.DeleteModel

@{
    ViewData["Title"] = "Delete Question";
}

<h1>Delete Question</h1>

<h3>Are you sure you want to delete this question and answer?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FAQ.Question)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FAQ.Question)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FAQ.Answer)
        </dt>
        <dd class="col-sm-10">
            <md-block>@Html.DisplayFor(model => model.FAQ.Answer)</md-block>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="FAQ.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn">Back to List</a>
    </form>
</div>
