@page
@model Dissertation.Pages.Information.FAQs.Manage.CreateModel

@{
    ViewData["Title"] = "Create Question and Answer";
}

<h1>Create Question and Answer</h1>

<hr />

<form method="post">
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="FAQ.Question" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="FAQ.Question" class="form-control" />
            <span asp-validation-for="FAQ.Question" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="FAQ.Answer" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <textarea asp-for="FAQ.Answer" class="form-control"></textarea>
            <span asp-validation-for="FAQ.Answer" class="text-danger"></span>
            <p><a href="https://www.markdownguide.org/cheat-sheet/" rel="noreferrer" target="_blank">Markdown</a> formatting is supported and encouraged!</p>
        </dd>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="FAQ.PagePosition" value="@Model.LatestPosition" />
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-page="Index" class="btn btn-danger">Back to List</a>
        </dd>
    </dl>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
