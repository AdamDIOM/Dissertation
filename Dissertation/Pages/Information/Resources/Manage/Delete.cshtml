@model Dissertation.Pages.Information.Resources.Manage.DeleteModel

@{
    ViewData["Title"] = "Delete Resource";
}

<h1>Delete Resource</h1>

<h3>Are you sure you want to delete this resource?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Link)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Category)
        </dt>
        <dd class="col-sm-10">
            @Model.ResourceType.FirstOrDefault(t => t.Id == Model.Resource.Category);
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Resource.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn">Back to List</a>
    </form>
</div>
