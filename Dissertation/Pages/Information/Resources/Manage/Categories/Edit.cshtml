@page
@model Dissertation.Pages.Information.Resources.Manage.Categories.EditModel

@{
    ViewData["Title"] = "Edit Resource Category";
}

<h1>Edit Resource Category</h1>

<hr />
<form method="post">
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="ResourceType.Type" class="control-label">Category</label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="ResourceType.Type" class="form-control" />
            <span asp-validation-for="ResourceType.Type" class="text-danger"></span>
        </dd>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ResourceType.Id" />
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-page="Index" class="btn btn-danger">Back to List</a>
        </dd>
    </dl>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
