@page
@model Dissertation.Pages.Information.Resources.Manage.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete Resource Type";
}

<h1>Delete Resource Category</h1>

<h3>Are you sure you want to delete this category?</h3>
<p>All resources with this category will be regarded as 'uncategorised'</p>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResourceType.Type)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ResourceType.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn">Back to List</a>
    </form>
</div>
