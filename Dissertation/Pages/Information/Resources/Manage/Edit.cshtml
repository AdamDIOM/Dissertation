@page
@model Dissertation.Pages.Information.Resources.Manage.EditModel

@{
    ViewData["Title"] = "Edit Resource";
}

<h1>Edit Resource</h1>

<hr />

<form method="post">
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Resource.Title" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Resource.Title" class="form-control" />
            <span asp-validation-for="Resource.Title" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Resource.Description" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Resource.Description" class="form-control" />
            <span asp-validation-for="Resource.Description" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Resource.Link" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Resource.Link" class="form-control" />
            <span asp-validation-for="Resource.Link" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Resource.Category" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <select asp-for="Resource.Category" class="form-select">
                <option value="-1" class="form-option">Uncategorised</option>
                @foreach (var type in Model.ResourceType)
                {
                    <option value=@type.Id class="form-option">@type.Type</option>
                }
            </select>
            <span asp-validation-for="Resource.Category" class="text-danger"></span>
        </dd>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Resource.PagePosition" value="0" />
        <input type="hidden" asp-for="Resource.Id" />
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <input type="submit" value="Move up" class="btn btn-secondary" asp-route-move="up" />
            <input type="submit" value="Move down" class="btn btn-secondary" asp-route-move="down" />
        </dd>
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-page="Index" class="btn btn-danger">Back to List</a>
        </dd>
    </dl>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
