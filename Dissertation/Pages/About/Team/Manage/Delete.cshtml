@page
@model Dissertation.Pages.About.Team.Manage.DeleteModel

@{
    ViewData["Title"] = $"Delete Volunteer - {Model.Volunteer.Name}";
}

<h1>Delete - @Model.Volunteer.Name</h1>

<h3>Are you sure you want to delete this volunteer?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.Name)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-4">
            <img src="@(Model.Volunteer.ImgUrl != null && Model.Volunteer.ImgUrl != "" ? Model.Volunteer.ImgUrl : "/img/team-member.png")" alt="@($"{Model.Volunteer.Name} Image")" class="mw-100" onerror="if (this.src != '/img/team-member.png') this.src = '/img/team-member.png';" />
        </dd>
        <dd class="col-sm-6"></dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Volunteer.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn">Back to List</a>
    </form>
</div>
