@page
@model Dissertation.Pages.About.Team.Manage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Volunteers</h1>

<p>
    <a asp-page="Create" class="btn">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Volunteer[0].Name)
            </th>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volunteer[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volunteer[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volunteer[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Volunteer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="image-column">
                    @if(item.ImgUrl != null && item.ImgUrl != "")
                    {
                        <img src="@item.ImgUrl" alt="@($"{item.Name} Image")" class="mw-100" onerror="if (this.src != '/img/team-member.png') this.src = '/img/team-member.png';" />
                    }
                    
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn mb-1 w-100">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn mb-1 w-100">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn mb-1 w-100">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
