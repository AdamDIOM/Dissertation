@page
@model Dissertation.Pages.About.Team.Manage.DetailsModel

@{
    ViewData["Title"] = $"Volunteer Details - {Model.Volunteer.Name}";
}

<h1>@Model.Volunteer.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-4">
            <img src="@(Model.Volunteer.ImgUrl != null && Model.Volunteer.ImgUrl != "" ? Model.Volunteer.ImgUrl : "/img/team-member.png")" alt="@($"{Model.Volunteer.Name} Image")" class="mw-100" onerror="if (this.src != '/img/team-member.png') this.src = '/img/team-member.png';" />
        </dd>
        <dd class="col-sm-6"></dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Volunteer.Id" class="btn">Edit</a>
    <a asp-page="./Index" class="btn">Back to List</a>
</div>
