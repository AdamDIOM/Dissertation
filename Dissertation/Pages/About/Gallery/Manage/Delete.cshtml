@page
@model Dissertation.Pages.About.Gallery.Manage.DeleteModel

@{
    ViewData["Title"] = "Delete Gallery Image";
}

<h1>Delete Image</h1>

<h3>Are you sure you want to delete this image?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <img src="@($"https://dissertationad.blob.core.windows.net/gallery/{Model.Image.Id}.png")" alt="@Model.Image.Caption" class="w-50" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Caption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Caption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Link)
        </dd>
        <dt class="col-sm-2">
            Displayed on Homepage Banner?
        </dt>
        <dd class="col-sm-10">
            @if (Model.Image.HomepageBannerDisplay ?? false)
            {
                <input type="checkbox" checked disabled />
            }
            else
            {
                <input type="checkbox" disabled />
            }
        </dd>
        <dt class="col-sm-2">
            Uploaded By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.UploadedBy)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Image.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn">Back to List</a>
    </form>
</div>
