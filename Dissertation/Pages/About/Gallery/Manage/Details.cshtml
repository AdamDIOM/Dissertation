@page
@model Dissertation.Pages.About.Gallery.Manage.DetailsModel

@{
    ViewData["Title"] = "Gallery Image Details";
}

<h1>Gallery Image Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <img src="@($"https://dissertationad.blob.core.windows.net/gallery/{Model.Image.Id}.png")" alt="@Model.Image.Caption" class="w-50" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Caption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Caption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Link)
        </dd>
        <dt class="col-sm-2">
            Displayed on Homepage Banner?
        </dt>
        <dd class="col-sm-10">
            @if (Model.Image.HomepageBannerDisplay ?? false)
            {
                <input type="checkbox" checked disabled />
            }
            else
            {
                <input type="checkbox" disabled />
            }
        </dd>
        <dt class="col-sm-2">
            Uploaded By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.UploadedBy)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Image.Id" class="btn">Edit</a>
    <a asp-page="./Index" class="btn">Back to List</a>
</div>
