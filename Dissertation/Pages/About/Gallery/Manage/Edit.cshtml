@page
@model Dissertation.Pages.About.Gallery.Manage.EditModel

@{
    ViewData["Title"] = "Edit Gallery Image Information";
}

<h1>Edit Gallery Image Information</h1>
<hr />

<form method="post">
    <dl class="row">
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <img src="@($"https://dissertationad.blob.core.windows.net/gallery/{Model.Image.Id}.png")" alt="@Model.Image.Caption" class="w-50" />
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Image.Caption" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Image.Caption" class="form-control" />
            <span asp-validation-for="Image.Caption" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Image.Description" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Image.Description" class="form-control" />
            <span asp-validation-for="Image.Description" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Image.Link" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Image.Link" class="form-control" />
            <span asp-validation-for="Image.Link" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Image.HomepageBannerDisplay" class="control-label">Displayed on Homepage Banner?</label>
        </dt>
        <dd class="col-sm-10">
            <input type="hidden" asp-for="Image.HomepageBannerDisplay" value="@true" />
            <input type="checkbox" asp-for="HomepageDisplay" />
            <span asp-validation-for="Image.HomepageBannerDisplay" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Image.UploadedBy" class="control-label">Uploaded By</label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Image.UploadedBy" class="form-control" disabled />
            <span asp-validation-for="Image.UploadedBy" class="text-danger"></span>
        </dd>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Image.Id" />
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-page="./Index" class="btn btn-danger">Back to List</a>
        </dd>
    </dl>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
